doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Inicio | Artesanos.com
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    )
  body
    header.bg-danger.py-2.px-3.position-relative.shadow-sm(style="box-shadow: rgba(0,0,0,0.1) -4px 9px 25px -6px; z-index: 50; min-height: 75px;")
      .container.d-flex.flex-wrap.align-items-center.justify-content-between.gap-3
        img(src="/public/img/Artesanos-logo.png" alt="Logo Artesanos" height="96")
        button.btn.btn-danger.rounded-pill.px-4.py-2.text-white Registrarse

    main.bg-warning-subtle.d-flex.justify-content-around.py-4
      img(src="/public/img/diy-creative-workshop.png" alt="DIY Creative Workshop" class="img-fluid" style="max-height: 400px;")
      
      .d-flex.align-items-center.justify-content-center
        .m-4(style="max-width: 320px;")
          h1.text-center.mb-4.text-secondary Iniciar Sesión

          if error
            .alert.alert-danger.text-center #{error}
          form(action="/auth/login" method="POST")
            .mb-3
              label.form-label(for="email") Email
              input#email.form-control(type="email" name="email" placeholder="tu@compañia.com" required)
            .mb-3
              .d-flex.justify-content-between.mb-2
                label.form-label(for="password") Contraseña
                a(href="#!" class="text-muted text-decoration-none") Olvidaste tu contraseña?
              input#password.form-control(type="password" name="password" placeholder="Tu Contraseña" required)
            .mb-3
              button.btn.btn-danger.w-100(type="submit") Iniciar Sesión
            p.text-center.text-muted
              | No tienes una cuenta todavía?
              a(href="#!" class="text-danger text-decoration-none ms-1") Regístrate

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
